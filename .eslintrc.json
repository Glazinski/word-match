{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "max-len": ["error", { "code": 100, "tabWidth": 2 }],
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "arrow-parens": ["error", "as-needed"]
  }
}
